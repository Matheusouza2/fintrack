generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Transacao {
  id          Int      @id @default(autoincrement())
  valor      Float
  tipo        TipoTransacao
  descricao String? 
  createdAt   DateTime @default(now())
}

// Enum para tipo de transação
enum TipoTransacao {
  CREDITO
  DEBITO
}
